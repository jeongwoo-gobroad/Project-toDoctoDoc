<div class="signup-container">
    <h2>Sign Up</h2>
    <form action="/admin/register" method="post">
        <div class="form-group">
            <label for="id" class="new-label">ID:</label>
            <input type="text" id="id" name="id" class="signup-form" required>
        </div>
        <div class="form-group" class="new-label">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="signup-form" required>
        </div>
        <div class="form-group" class="new-label">
            <label for="password2">Confirm Password:</label>
            <input type="password" id="password2" name="password2" class="signup-form" required>
        </div>
        <div class="form-group" class="new-label">
            <label for="usernick">Nickname:</label>
            <input type="text" id="usernick" name="usernick" class="signup-form" required>
        </div>
        <div class="form-group" class="new-label">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="signup-form" required>
        </div>
        <button type="submit" class="signup-button">Sign Up</button>
    </form>
</div>